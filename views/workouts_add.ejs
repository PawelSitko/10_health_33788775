<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add workout â€“ Health Tracker</title>
    <link rel="stylesheet" href="/style.css">
  </head>

  <body>
    <main class="page">
      <section class="card">
        <header class="card-header">
          <h1>Add a workout</h1>

          <nav class="nav-links">
            <a href="/">ğŸ  Home</a>
            <a href="/users/login">ğŸ”‘ Login</a>
            <a href="/users/register">ğŸ“ Register</a>
            <a href="/workouts/list">ğŸ¶ Workouts</a>
          </nav>
        </header>

        <section class="card-body">
          <% const data = formData || {}; %>

          <% if (error) { %>
            <p class="error"><%= error %></p>
          <% } %>

          <form method="POST" action="/workouts/add">
            <div class="form-row">
              <label>Date</label>
              <input
                type="date"
                name="date"
                value="<%= data.date || '' %>"
                required
              />
            </div>

            <div class="form-row">
              <label>Activity</label>
              <input
                type="text"
                name="activity"
                placeholder="e.g. Run, Gym session"
                value="<%= data.activity || '' %>"
                required
              />
            </div>

            <div class="form-row">
              <label>Duration (minutes)</label>
              <input
                type="number"
                name="duration"
                min="1"
                value="<%= data.duration || '' %>"
                required
              />
            </div>

            <div class="form-row">
              <label>Intensity</label>
              <input
                type="text"
                name="intensity"
                placeholder="e.g. Easy, Medium, Hard"
                value="<%= data.intensity || '' %>"
              />
            </div>

            <div class="form-row">
              <label>Notes</label>
              <textarea
                name="notes"
                rows="3"
                placeholder="Any extra details..."
              ><%= data.notes || '' %></textarea>
            </div>

            <button type="submit" class="btn">Save workout</button>
          </form>
        </section>
      </section>
    </main>
  </body>
</html>
