<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Your Workouts</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <div class="container">
      <h1>Your Workouts</h1>

      <div class="nav-links">
        <a href="/">ğŸ  Home</a>
        <a href="/workouts/add">â• Add workout</a>
        <a href="/users/logout">ğŸšª Logout</a>
      </div>

      <% if (!workouts || workouts.length === 0) { %>
        <p>You have no workouts saved yet.</p>
        <a href="/workouts/add" class="btn btn-primary">Add your first workout</a>
      <% } else { %>
        <table class="table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Type</th>
              <th>Duration (min)</th>
              <th>Intensity</th>
              <th>Notes</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% workouts.forEach(function(w) { %>
              <tr>
                <td>
                  <% if (w.workout_date && w.workout_date.toISOString) { %>
                    <%= w.workout_date.toISOString().slice(0,10) %>
                  <% } else { %>
                    <%= w.workout_date %>
                  <% } %>
                </td>
                <td><%= w.workout_type %></td>
                <td><%= w.duration_minutes %></td>
                <td><%= w.intensity %></td>
                <td><%= w.notes || '' %></td>
                <td>
                  <a href="/workouts/edit/<%= w.id %>" class="btn btn-secondary">Edit</a>
                  <a href="/workouts/delete/<%= w.id %>" class="btn btn-danger"
                     onclick="return confirm('Delete this workout?');">
                    Delete
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </body>
</html>
